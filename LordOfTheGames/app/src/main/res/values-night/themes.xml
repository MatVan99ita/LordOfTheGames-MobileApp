<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. Theme.MaterialComponents.DayNight.DarkActionBar Theme.AppCompat.DayNight.NoActionBar-->
    <style name="Theme.LordOfTheGames" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_dark_primary</item>
        <item name="colorPrimaryVariant">@color/red_light_variant</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/viola_primo</item>
        <item name="colorSecondaryVariant">@color/red_light_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->

        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>

<!--
-->
    </style>

    <style name="Fontato" parent="Theme.LordOfTheGames">
        <item name="android:fontFamily">@font/god_of_war</item>
    </style>

    <style name="controller" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/CustomButtonThemeOverlay</item>
    </style>

    <style name="CustomButtonThemeOverlay">
        <item name="colorPrimary">@color/divider</item>
    </style>


    <style name="add_controller" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/CustomButtonThemeOverlay2</item>
    </style>

    <style name="CustomButtonThemeOverlay2">
        <item name="colorPrimary">@color/black</item>
    </style>


    <style name="Theme.LordOfTheGames.DarkNight" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colori primari -->
        <item name="colorPrimary">#BB86FC</item>
        <item name="colorPrimaryDark">#3700B3</item>
        <item name="colorAccent">#03DAC6</item>

        <!-- Colori di sfondo -->
        <item name="android:colorBackground">#121212</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Theme.GamingApp.MidnightBlues" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colori primari -->
        <item name="colorPrimary">#1E88E5</item>
        <item name="colorPrimaryDark">#1565C0</item>
        <item name="colorAccent">#E91E63</item>

        <!-- Colori di sfondo -->
        <item name="android:colorBackground">#212121</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>


    <style name="Theme.GamingApp.Cyberpunk" parent="Theme.MaterialComponents.DayNight.NoActionBar">
